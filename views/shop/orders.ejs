<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main>
        <% if(orders.length <=0) {%>
          <h1>Nothing here!</h1>
          <% } else {%>
            <ul>
              <% orders.forEach(order=> { %>
                <li>
                  <h1># <%= order.id %>
                  </h1>
                  <ul>
                    <% order.products.forEach(item=> { %>
                      <li>
                        <%= item.title %> (<%= item.orderItem.quantity %>)
                      </li>
                      <% }); %>

                  </ul>
                </li>
                <% }); %>

            </ul>
            <% } %>
      </main>
  </body>
  <%- include('../includes/end.ejs') %>

</html>