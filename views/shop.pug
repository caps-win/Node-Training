extends layouts/main-layout.pug

block styles  
    link(rel="stylesheet", href="/css/product.css")
block content
  main
    if prods.length < 1
      h1 No products
    .grid
      each product in prods
        article.card.product-item
          header.card__header 
            h1.product__title #{product.title}
          .card__image
            img(src="https://cdn.pixabay.com/photo/2017/01/07/15/07/bible-1960635_960_720.jpg")
          .card__content 
            h2.product__price $19.99
            p.product__description summary
          .card__actions 
            button.btn Add to Cart