<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
          method="POST">
          <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if (editing) { %> <%= product.title %> <% } %>">
          </div>
          <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl"
              value="<% if (editing) { %> <%= product.imageUrl %> <% } %>">
          </div>
          <div class="form-control">
            <label for="price">Price</label>
            <input type="number" step=".01" name="price" id="price"
              value="<% if (editing) { %><%= product.price %><% } %>">
          </div>
          <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description"
              rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
          </div>
          <button class="btn" type="submit">
            <% if (editing) { %> Update Product <% } else { %> Add Product <% } %>
          </button>
          <% if (editing) { %>
            <input type="hidden" name="id" value="<%= product.id %>">
            <% } %>
        </form>
      </main>
      <%- include('../includes/end.ejs') %>
  </body>

</html>